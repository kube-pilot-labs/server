{
    "KAFKA_CREATE_DEPLOY_TOPIC": {
        "groups": [
            "DeployConfigService"
        ],
        "conditions": [
            "IsString",
            "IsNotEmpty"
        ]
    },
    "KAFKA_HEALTH_CHECK_TOPIC": {
        "groups": [
            "HealthCheckConfigService"
        ],
        "conditions": [
            "IsString",
            "IsNotEmpty"
        ]
    },
    "KAFKA_BROKER": {
        "groups": [
            "KafkaConfigService"
        ],
        "conditions": [
            "IsString",
            "IsNotEmpty"
        ]
    },
    "DB_HOST": {
        "groups": [
            "MariaDBConfigService"
        ],
        "conditions": [
            "IsString",
            "IsNotEmpty"
        ]
    },
    "DB_PORT": {
        "defaultValue": "unknown",
        "groups": [
            "MariaDBConfigService"
        ],
        "conditions": [
            "IsNumber",
            "IsNotEmpty"
        ]
    },
    "DB_USERNAME": {
        "groups": [
            "MariaDBConfigService"
        ],
        "conditions": [
            "IsString",
            "IsNotEmpty"
        ]
    },
    "DB_PASSWORD": {
        "groups": [
            "MariaDBConfigService"
        ],
        "conditions": [
            "IsString",
            "IsNotEmpty"
        ]
    },
    "DB_DATABASE": {
        "groups": [
            "MariaDBConfigService"
        ],
        "conditions": [
            "IsString",
            "IsNotEmpty"
        ]
    },
    "DB_SYNC": {
        "defaultValue": "true",
        "groups": [
            "MariaDBConfigService"
        ],
        "conditions": [
            "IsBoolean",
            "IsNotEmpty"
        ]
    }
}